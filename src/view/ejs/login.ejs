<%- include('./includes/head.ejs') %>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/forms.css">
  <link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include('./includes/navigation.ejs') %>
  <%- include('./util/errors-message.ejs', {errors}) %>
    
  <main>
    <form class="product-form" action="/auth/login" method="POST">
      <div class="form-control">
        <label for="email">Email</label>
        <input 
          required 
          type="email" 
          name="email" 
          id="email"
          value="<%= body.length ? body[0].email : '' %>"  
        >

        <label for="password">Password</label>
        <input required type="password" name="password" id="password">
      </div>

      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <button class="btn" type="submit">Join us (:</button>
    </form>
    <div style="text-align: center; margin-top: 20px;">
      <a href="/auth/reset" class="home_button">Forgate your password ?</a>
    </div>
  </main>
<%- include('./includes/end.ejs') %>